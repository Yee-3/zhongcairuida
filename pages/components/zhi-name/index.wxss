/* pages/components/zhi-name/index.wxss */
.mask {
	position: fixed;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	background: rgba(0, 0, 0, 0.5);
	z-index: 99;
}

.mask1 {
	position: fixed;
	left: 30rpx;
	bottom: 20rpx;
	width: 690rpx;
	height: 920rpx;
	/* background-color: red; */
	color: #909090;
	z-index: 999;

}

.m_top {
	width: 100%;
	height: 800rpx;
	margin-bottom: 20rpx;
	background-color: #fff;
	border-radius: 15rpx;
}

.mask_02 {
	position: fixed;
	width: 690rpx;
	height: 710rpx;
	background: #ff4949;
	border-bottom-left-radius: 15rpx;
	border-bottom-right-radius: 15rpx;
	background: rgba(0, 0, 0, 0.6);
	/* border: 1px sol; */
	z-index: 9998;

}

.mask_02_01 {
	position: absolute;
	width: 560rpx;
	right: 0;
	height: 710rpx;
	background: #ff4949;
	/* border-bottom-left-radius: 20rpx; */
	border-bottom-right-radius: 15rpx;
	background: #fff;
	box-sizing: border-box;
	z-index: 9999;
	display: flex;
}

.mask_left {
	width: 220rpx;
	height: 100%;
	padding-top: 25rpx;
	/* background: red; */
}

.mask_right {
	background: #f6f6f6;
	padding-top: 25rpx;
	border-bottom-right-radius: 15rpx;
	width: 340rpx;
}

.img1 {
	height: 20rpx;
	width: 24rpx;
	position: absolute;
	right: 15rpx;
	margin-top: 30rpx;
}

.img2 {
	height: 20rpx;
	width: 24rpx;
	position: absolute;
	right: 30rpx;
	margin-top: 30rpx;
}

.title {
	height: 90rpx;
	border-bottom: 1rpx solid #f3f3f3;
	display: block;
	font-size: 30rpx;
	padding-left: 40rpx;
	line-height: 90rpx;
	font-weight: bold;
	color: #333;
}

.bot {
	height: 100rpx;
	line-height: 100rpx;
	font-size: 25rpx;
	line-height: 84rpx;
	padding-left: 30rpx;
}

.top_top {
	height: 710rpx;
	padding-top: 25rpx;
}

.img {
	width: 5rpx;
	height: 18rpx;
	background-color: #19a0ff;
}

.bott {
	min-width: 160rpx;
	height: 58rpx;
	margin-top: 30rpx;
	margin-left: 40rpx;
	background-color: #f0f0f0;
	color: #909090;
	font-weight: normal;
	font-size: 22rpx;
}

.m_bottom {
	height: 100rpx;
	/* display: flex;
	justify-content: space-around; */
}

.no {
	height: 100rpx;
	line-height: 100rpx;
	font-size: 25rpx;
	line-height: 84rpx;
	padding-left: 30rpx;
	color: #0385ff;
}

.cancel {
	/* box-sizing: border-box; */
	position: absolute;
	left: 0;
	max-width: 335rpx;
	padding: 0;
	line-height: 100rpx;
	margin-right: 20rpx;
	font-size: 30rpx;
	color: #aaaaaa;

}

.confirm {
	position: absolute;
	right: 0;
	max-width: 335rpx;
	padding: 0;
	line-height: 100rpx;
	background-color: #0385ff;
	font-size: 30rpx;
	color: #fff;
}
