/* 学历弹框 */
.mask {
	position: fixed;
	top: 0;
	left: 0;
	width: 100%;
	height:100%;
	background: rgba(0, 0, 0, 0.5);
	z-index: 99;
}
.maskCom{
  height: 350rpx;
  top:30%;
  position: fixed;
  left: 100rpx;
  right: 100rpx;
  z-index: 9999;
  bottom: 40rpx;
  background: #fff;
  border-radius: 20rpx;
  padding-left: 25rpx;
  padding-right:25rpx;
  box-sizing: border-box;
}
.edu_top{
  /* height: 260rpx; */
  padding-left: 30rpx;
  padding-top: 30rpx;
  background: #fff;
  box-sizing: border-box;
  margin-bottom: 20rpx;
  border-radius: 15rpx;
  padding-bottom:20rpx ;
}
.conTitle{
  font-size:30rpx;
  color: #000;
  margin-bottom: 50rpx;
  margin-top: 50rpx;
  text-align: center;
}

button::after{
  border:none;
}
.conCont{
  text-align: center;
color: #c0c0c0;
font-size: 30rpx;
margin-bottom: 20rpx;
}
/* 底部按钮 */
.conButt button {
  min-width: 40%;
  line-height: 80rpx;
	/* display: flex;
	justify-content: space-around; */
}
.cancel {
	/* box-sizing: border-box; */
	position: absolute;
	left: 35rpx;
	min-width: 40%;
	line-height:60rpx;
	font-size: 30rpx;
  color: #0385ff;
  background-color: #fff;
  text-align: center;
  border-radius: 36rpx;
  border: 1rpx solid #0385ff;
  bottom: 40rpx;
}

.confirm {
  border-radius: 36rpx;
  text-align: center;
  border: 1rpx solid #0385ff;
  position: absolute;
  bottom: 40rpx;
	right: 35rpx;
  min-width: 40%;
	padding: 0;
	line-height: 60rpx;
	background-color:#0385ff;
	/* margin-right: 20rpx; */
	font-size: 30rpx;
	color: #fff;
}